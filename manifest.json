{
    "manifest_version": 3,
    "name": "Text-to-Speech Converter",
    "description": "Convert selected text to speech using Gan.AI's TTS API",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  
  